<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="shipshapedevices.shipshape_v0.MainActivity">

    <Button
        android:id="@+id/addPckgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new package"
        />

    <Button
        android:id="@+id/myPckgsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View my packages"
        />

    <Button
        android:id="@+id/statBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View statistics"
        />
    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:text="@string/button_sign_out_text"/>

</LinearLayout>
