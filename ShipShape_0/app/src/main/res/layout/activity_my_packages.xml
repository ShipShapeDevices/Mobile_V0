<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shipshapedevices.shipshape_v0.MyPackagesActivity">

    <co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView
        android:id="@+id/realm_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        app:rrvIsRefreshable="true"
        app:rrvLayoutType="LinearLayout"
        app:rrvSwipeToDelete="true">

    </co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView>

    <Button
        android:id="@+id/addPckgBtn"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add Package"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/addPckgText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addPckgBtn"
        android:layout_alignParentStart="true"
        android:hint="Enter Parcel ID"
        android:layout_weight="1"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1" />


</RelativeLayout>


